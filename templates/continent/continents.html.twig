{% extends 'base.html.twig' %}

{% block title %}listes des continents
{% endblock %}

{% block monTitre %}Liste des continents
{% endblock %}

{% block body %}

	{% for continent in continents %}
    <div class="container-fluid mt-5">
		<h2 class="border-bottom border-primary"><a href=" {{ path('afficher_continent', {'id': continent.id }) }} ">{{ continent.libelle }}</a></h2>
		<div class="row ">
            {% for animaux in continent.animaux %}
				<div class="col">
                    <div class="row align-items-center">
                        <div class="col-12 col-md-6 col-lg-2 text-center">
                            <img class="mt-5" src="{{ asset('images/' ~ animaux.image) }}" alt="{{ animaux.image }}">
                        </div>
                        <div class="col text-center">
                            <h3><a href=" {{ path('afficher_animal', {'id': animaux.id })}} ">{{ animaux.nom }}</a></h3>
                            <p>{{ animaux.description }}</p>
                            <p><a href="{{ path('afficher_famille', {'id': animaux.famille.id })}}" class="btn btn-primary">{{ animaux.famille.libelle }}</a></p>                           
                        </div>
                    </div>
                </div>
			</div>
		{% endfor %}
	{% endfor %}
</div>       
{% endblock %}
