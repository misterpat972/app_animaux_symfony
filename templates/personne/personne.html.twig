{% extends 'base.html.twig' %}

{% block title %}Peronnes
{% endblock %}

{% block monTitre %}{{ personne.nom }}
{% endblock %}

{% block body %}	
    <h3 class="border rounded p-2 m-2">Liste d'animaux posédés :</h3>
	{% for dispose in  personne.disposes %}
	<div class="container">
		<div class="row align-items-center">
			<div class="col-2">
				<img class="mt-3" src=" {{ asset('images/' ~ dispose.animal.image)}} " alt="  {{dispose.animal.image}} ">
			</div>
			<div class="col-6 mt-3">
				<h2 class=" border-primary text-center">
					<a href=" {{path('afficher_animal', {'id': dispose.animal.id })}} ">
						{{ dispose.animal.nom }}
					</a>
					<div>Nombres:
						{{dispose.nb}}
					</div>
				</h2>
			</div>
		</div>
    </div>
	{% endfor %}

{% endblock %}
